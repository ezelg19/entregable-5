head
  meta(charset='utf-8')
  title Products Pug Version
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

body(style={margin: '2.5% 10%'})
  h1 Producto
  br
    
  if productsExist
    table.table
      thread
        tr
          th(scope="col") Id 
          th(scope="col") Title 
          th(scope="col") Price 
          th(scope="col") Thumbnail 
        
      tbody
        each product in products
          tr
            th(scope="row")= product.id
            td= product.title 
            td= product.price 
            td
              img(src= product.thumbnail, alt="" border=1 height=48 width=48 )
    
  else 
    p El Id ingresado no existe
