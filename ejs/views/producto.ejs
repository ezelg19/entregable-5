<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS Version</title>
    <!-- CSS only -->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT' crossorigin='anonymous' />
</head>

<body style="margin: 2.5% 10%;">
    <a href="http://localhost:4000/">Formulario</a>
    <a>-------</a>
    <a href="http://localhost:4000/productos">Productos</a>
    <h1>Producto</h1>
    <br>

    <% if (productsExist) { %>
        <table class='table'>
            <thead class='thead-dark'>
                <tr>
                    <th scope='col'>ID</th>
                    <th scope='col'>Title</th>
                    <th scope='col'>Price</th>
                    <th scope='col'>Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(function(product){ %>
                    <tr>
                        <th scope='row'>
                            <%- product.id %>
                        </th>
                        <td>
                            <%- product.title%>
                        </td>
                        <td>
                            <%- product.price%>
                        </td>
                        <td><img src=<%- product.thumbnail%> alt="" border=1 height=48 width=48></img></th>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else{ %>
            <p>El Id ingresado no existe</p>
            <% } %>


</body>

</html>